{
  "permissions": {
    "allow": [
      "Bash(pwsh.exe:*)",
      "Bash(./scripts/build.ps1)",
      "Bash(timeout:*)",
      "Bash(go test:*)",
      "Bash(cat:*)",
      "Bash(test:*)",
      "Bash(git add:*)",
      "Bash(gofmt:*)",
      "Bash(git push:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/remind-standards.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/go-enforce-structure.js"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/go-enforce-structure.js"
          }
        ]
      }
    ]
  }
}
