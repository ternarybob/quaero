{
  "manifest_version": 3,
  "name": "Quaero Auth Capture",
  "version": "0.1.0",
  "description": "Captures authentication data from Jira/Confluence for Quaero",
  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*.atlassian.net/*",
    "https://*.jira.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Quaero"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
