{
    "manifest_version": 3,
    "name": "Quaero Web Crawler",
    "version": "0.2.0",
    "description": "Capture authentication and instantly crawl any website with Quaero",
    "permissions": [
        "cookies",
        "activeTab",
        "tabs",
        "storage",
        "scripting",
        "webNavigation",
        "sidePanel"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["crawl-bridge.js"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "action": {
        "default_title": "Quaero Web Crawler"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["crawl-bridge.js"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
