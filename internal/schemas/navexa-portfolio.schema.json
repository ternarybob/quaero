{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "navexa-portfolio.schema.json",
  "title": "Navexa Portfolio Schema",
  "description": "Schema for Navexa portfolio data with holdings from performance API",
  "type": "object",
  "required": ["portfolio", "holdings"],
  "properties": {
    "portfolio": {
      "type": "object",
      "description": "Portfolio metadata from Navexa API",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Navexa portfolio ID"
        },
        "name": {
          "type": "string",
          "description": "Portfolio name"
        },
        "dateCreated": {
          "type": "string",
          "format": "date-time",
          "description": "Date the portfolio was created"
        },
        "baseCurrencyCode": {
          "type": "string",
          "description": "Base currency code (e.g., AUD)"
        }
      }
    },
    "holdings": {
      "type": "array",
      "description": "List of holdings with performance data from Navexa performance API",
      "items": {
        "type": "object",
        "required": ["symbol", "quantity"],
        "properties": {
          "symbol": {
            "type": "string",
            "description": "Trading symbol (e.g., BHP)"
          },
          "name": {
            "type": "string",
            "description": "Holding name (company name)"
          },
          "exchange": {
            "type": "string",
            "description": "Exchange code (e.g., ASX)"
          },
          "quantity": {
            "type": "number",
            "description": "Number of units held"
          },
          "avgBuyPrice": {
            "type": "number",
            "description": "Average buy price per unit (calculated from totalValue / quantity)"
          },
          "currentValue": {
            "type": "number",
            "description": "Current total value of the holding"
          },
          "holdingWeight": {
            "type": "number",
            "description": "Percentage weight of this holding in the portfolio"
          },
          "currencyCode": {
            "type": "string",
            "description": "Currency code (e.g., AUD)"
          }
        }
      }
    },
    "fetched_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when data was fetched from Navexa API"
    },
    "holding_count": {
      "type": "integer",
      "description": "Number of holdings in the portfolio"
    }
  }
}
